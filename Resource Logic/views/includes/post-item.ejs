<article class="post-item">
  <h2>
    <%= post.title%>
  </h2>
  <p class="post-item-author">By <%= post.author.name%>
  </p>
  <p>
    <%= post.summary%>
  </p>
  <div class="post-actions">
    <form action="/notes-request/delete/<%=post._id%>" method="POST">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a class="btn" href="/notes-request/<%=post._id%>">View Post</a>
  </div>
</article>